<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
          
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <% unless notice.blank? %>
                <div class="alert alert-info alert-dismissable alert-fixed">
                  <%= notice %>
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                </div>
              <% end %>
              <% unless alert.blank? %>
                <div class="alert alert-danger alert-dismissable alert-fixed">
                  <%= alert %>
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                </div>
              <% end %>
            <form class="form-signin">
              <div class="form-label-group">
              <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'email@example.com' %>
              <%= f.label :email %>
                
              </div>

              <div class="form-label-group">
              
              <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'password' %>
              <%= f.label :password %>
              </div>

              <div class="custom-control custom-checkbox mb-3">
              <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
              </div>
              
              
        <%= f.submit 'Sign in', class: 'btn btnSubmit btn-lg btn-primary btn-block text-uppercase' %>
   
              <hr class="my-4">
              <button class="btn btnSubmit btn-lg btn-google btn-block text-uppercase " type="submit">Sign in with Google </button>
              <button class="btn btnSubmit btn-lg btn-facebook btn-block text-uppercase" type="submit"></i> Sign in with Facebook</button>
            
              </form>
              <% end %>
          </div>
          </div>
